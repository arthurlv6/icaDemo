@using ica.website.Models
@{
    ViewBag.Title = "Refresh cache";
}
<div class="container">
    <div style="min-height:300px;margin-top:50px;">
        @{
            if (!string.IsNullOrEmpty(ViewBag.message))
            {
                <h3>You refresh cache @ViewBag.message</h3>
            }
            var caches = Enum.GetValues(typeof(CacheType)).Cast<CacheType>();
            @Html.ActionLink("Refresh All", "Refresh", new { id = "all" }, new { @class = "btn btn-success", style = "margin-bottom:10px;margin-left:5px;" });
            foreach (var item in caches)
            {
                @Html.ActionLink(item.ToString(), "Refresh", new { id = item.ToString() }, new { @class = "btn btn-primary", style = "margin-bottom:10px;margin-left:5px;" });
            }
        }
    </div>
</div>

