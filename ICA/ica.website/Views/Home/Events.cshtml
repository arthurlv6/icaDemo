@using ica.website.Domain;
@model List<WebEvent>
@{
    ViewBag.Title = "Events";
}
<div class="container">
    <h3>
        <a class="goBack" href="javascript:history.back()"><i class="fa fa-arrow-circle-left"></i></a>Latest Event
    </h3>
    <div class="row" style="margin-top:20px;">
        @foreach (var eventItem in Model)
            {
            <div class="col-md-3 wow zoomIn" style="min-height:370px;">
                <a data-ajax="true" data-ajax-mode="replace" data-ajax-update="#fullModalContent" href="/Home/ModalEventDetail/@("?id="+eventItem.Id)" onclick="openModal()">
                    @Html.Raw(eventItem.Image.Replace(">", "class='img-responsive img-rounded' alt='"+eventItem.Name+"' >"))
                </a>
                <a data-ajax="true" data-ajax-mode="replace" data-ajax-update="#fullModalContent" href="/Home/ModalEventDetail/@("?id="+eventItem.Id)" onclick="openModal()">
                    <h3>@eventItem.Name</h3>
                </a>
                @Html.Raw("<p style=color:green>" + eventItem.Date + "</p>")
                @Html.Raw("<p>" + eventItem.During + "</p>")
                @Html.Raw("<p>" + eventItem.Address + "</p>")
                
            </div>
        }
    </div>
</div>

