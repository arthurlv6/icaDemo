@using ica.website.Domain
@model IEnumerable<WebEvent>

<ul style="list-style:none;padding-left: 0px;height:560px;">
    @foreach (var item in Model.OrderByDescending(d => d.Date))
    {
        <li style="border-bottom: 1px solid #dadada;margin-bottom:20px;min-height:90px;">
            <div style="width: 61px;
    height: 80px;
    float: left;
    background: url(/images/calendar.png) no-repeat;
    background-size: 61px 80px;
    margin: 0 20px 0 0;
    text-align: center;">
                <strong style="    display: block;
    font-size: 36px;
    color: #fff;
    padding: 12px 0 0 0;">@item.Date.Day</strong>
                <span style="display: block;
    font-size: 11px;
    text-transform: uppercase;
    color: #fff;
    padding: 3px 0 0 0;">@item.Date.ToString("MMM")</span>
            </div>
            <div>
                <article>
                    @Ajax.ActionLink(item.Name, "ModalEventDetail",
                   new { Id = item.Id },
                   new AjaxOptions { InsertionMode = InsertionMode.Replace, UpdateTargetId = "fullModalContent" },
                   new { onclick = "openModal()" })
                    <p style="margin:0px;">@item.Address</p>
                    <p style="font-size:x-small;margin:0px;">@item.During</p>
                   
                </article>
            </div>
        </li>
    }
</ul>

