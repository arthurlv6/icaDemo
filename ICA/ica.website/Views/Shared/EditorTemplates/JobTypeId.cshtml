
@using ica.website.Domain;
@using ica.website.Models
@using ica.website.Infrastructure
@model long?
@{
    var languageId = (long)ViewBag.selected;
    var jobTypes = CacheHelper.GetCache<WebJobType>(CacheType.WebJotType).Where(d=>d.LanguageId== languageId).ToList().Select(u => new SelectListItem
    {
        Text = u.Name,
        Value = u.Id.ToString(),
        Selected = u.Id == Model
    }).ToArray();
}
@Html.DropDownList("", jobTypes, new { @class = "form-control" })

