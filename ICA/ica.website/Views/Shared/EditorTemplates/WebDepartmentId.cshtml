@using ica.website.Models;
@using ica.website.Domain;
@model long?
@{
    var languageId = (long)ViewBag.selected;
    var departments = CacheHelper.GetCache<WebDepartment>(CacheType.WebDepartment).Where(d=>d.LanguageId==languageId).ToList().Select(u => new SelectListItem
    {
        Text = u.Name,
        Value = u.Id.ToString(),
        Selected = u.Id == Model
    }).ToArray();
}
@Html.DropDownList("", departments, new { @class = "form-control" })
