@model ica.website.Domain.WebMenu
@{
    ViewBag.Title = "EditContent";
}
<div class="container">
    @using (Html.BeginForm("SaveContent", "WebMenu", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.HiddenFor(d => d.Id)
        <h2>@Html.Raw(Model.Name) </h2>
        @Html.TextBoxFor(d => d.Content)
        <input type="submit" value="Confirm" onclick="setContent()" class="btn btn-primary" />
        <a href="javascript:history.back()" class="btn btn-primary"><i class="fa fa-times"></i>Return</a>
    }
    </div>
    @section scripts{
        <script type="text/javascript">
            $(function () {
                $('#Content').summernote({
                    height: 300,                 // set editor height
                    minHeight: 200,             // set minimum height of editor
                    maxHeight: null,             // set maximum height of editor
                });
                $('#Content').code($('#Content').val());
                //$("textarea.note-codable").css("max-width", "none");
            })
            function setContent() {
                var des = $('#Content').code();
                $('#Content').val(des);
            }
        </script>
    }
